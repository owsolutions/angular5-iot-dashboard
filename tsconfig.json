{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "paths": {
      "@lodash": [
        "vendor/lodash.ts"
      ],
      "@app/*": [
        "app/*"
      ],
      "@components/*": [
        "app/components/*"
      ],
      "@services/*": [
        "app/services/*"
      ],
      "socket.io-client": ["node_modules/socket.io-client/dist/socket.io.slim.js"]
    },
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ],
    "module": "es2015"
  }
}